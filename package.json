{
  "name": "panes",
  "version": "0.0.0",
  "description": "Multiple concurrent dev servers in panes",
  "bin": {
    "panes": "./bin/panes"
  },
  "scripts": {
    "link": "npm run unlink && ln -s ../../bin/panes node_modules/.bin/panes",
    "unlink": "rm -f node_modules/.bin/panes",
    "typecheck": "tsc --noEmit -p .",
    "lint": "eslint --max-warnings 0 .",
    "unit": "CI=1 vitest --globals --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run typecheck && npm run lint && npm run format:check && npm run unit",
    "clean": "rm -rf dist coverage",
    "copy-files": "cp README.md dist/ && cp -R bin dist/ && lean-package > dist/package.json",
    "build": "npm run clean && rollup -c && npm run copy-files && prettier --ignore-path .prettierignore --write dist",
    "prepublishOnly": "echo '!! Please use ./publish.sh instead !!' && exit 1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/node": "^18.19.33",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-xt": "^1.8.0",
    "lean-package": "^1.2.0",
    "prettier": "^3.2.5",
    "rollup": "^2.77.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "typescript": "~5.1.6",
    "vitest": "^1.6.0"
  },
  "eslintConfig": {
    "extends": "xt",
    "ignorePatterns": [
      "/dist",
      "/coverage"
    ],
    "rules": {
      "prefer-const": "warn",
      "@typescript-eslint/consistent-type-imports": "warn",
      "import/order": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "",
      "^[./]"
    ]
  },
  "homepage": "https://github.com/sstur/panes",
  "repository": "github:sstur/panes",
  "keywords": [],
  "license": "ISC"
}
